            <p class="text-start fs-6">Sistema utilizado para lan√ßamento de notas das disciplinas.</p>
            <p>
                {{#each post}}
                    {{#dataValues}}
                        <form action="/atualizar" method="POST">
                            <div class="mb-3 text-start">
                                <input type="hidden" name="id" class="form-control" id="disciplina" value="{{id}}">
                                <label class="form-label">Disciplina:</label>
                                <input type="name" name="disciplina" class="form-control" id="disciplina" value="{{disciplina}}"> 
                            </div>
                            <div class="mb-3 text-start">
                                <label class="form-label">Disciplina:</label>
                                <select name="disciplina" class="form-select" aria-label="Default select example">
                                    <option value="portugues">portugues</option>
                                    <option value="matematica">matematica</option>
                                    <option value="biologia">biologia</option>
                                    <option value="quimica">quimica</option>                                    
                                </select>
                            </div>

                            <div class="mb-3 text-start">
                                <label class="form-label">nota1:</label>
                                <input type="date" name="nota1" class="form-control" id="nota1" aria-describedby="nota1" value="{{nota1}}">
                            </div>
                            <div class="mb-3 text-start">
                                <label class="form-label">nota2:</label>
                                <input type="date" name="nota1" class="form-control" id="nota2" aria-describedby="nota2" value="{{nota1}}">
                            </div>
                            <div class="mb-3 text-start">
                                <label class="form-label">nota3:</label>
                                <input type="date" name="nota1" class="form-control" id="nota3" aria-describedby="nota3" value="{{nota1}}">
                            </div>                            
                            <div class="mb-3 text-start">
                                <button type="submit" class="btn btn-primary">Atualizar</button>
                            </div>
                        </form>
                    {{/dataValues}}
                {{/each}}
            </p>
