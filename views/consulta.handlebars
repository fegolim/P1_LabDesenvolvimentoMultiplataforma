<div class="container">
  <div class="row">
    <div class="col-1">
      &nbsp;
    </div>
    <div class="col bg-primary">
      <nav class="navbar bg-primary navbar-expand-lg" data-bs-theme="dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">P1_DesenvolvimentoMultiplataforma</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
              <a
                class="nav-link active"
                aria-current="page"
                href="/"
              >Cadastrar</a>
              <a class="nav-link" href="/consulta">Consultar</a>
            </div>
          </div>
        </div>
      </nav>
    </div>
    <div class="col-1">
      &nbsp;
    </div>
  </div>
  <div class="row">
    <div class="col-1">
      &nbsp;
    </div>
    <div class="col bg-white">
      &nbsp;
    </div>
    <div class="col-1">
      &nbsp;
    </div>
  </div>
  <div class="row">
    <div class="col-1">
      &nbsp;
    </div>
    <div class="col bg-white">
      <p class="text-start fs-5">Cadastrar - Notas Disciplinas</p>
      <p class="text-start fs-6">Sistema utilizado para lançamento de notas das disciplinas.</p>
      <p>
        <div class="container text-center">
          <div class="row bg-primary">
            <div class="col text-light">
              Disciplina
            </div>
            <div class="col text-light">
              Nota1
            </div>
            <div class="col text-light">
              Nota2
            </div>
            <div class="col text-light">
              Nota3
            </div>
            <div class="col text-light">
              Ações
            </div>
          </div>
          <div class="row">
            <div class="col text-light">
              &nbsp;
            </div>
            <div class="col text-light">
              &nbsp;
            </div>
            <div class="col text-light">
              &nbsp;
            </div>
            <div class="col text-light">
              &nbsp;
            </div>
            <div class="col text-light">
              &nbsp;
            </div>
            <div class="col text-light">
              &nbsp;
            </div>
          </div>
          {{#each post}}
            {{#dataValues}}
              <div class="row">
                <div class="col">
                  {{disciplina}}
                </div>
                <div class="col">
                  {{nota1}}
                </div>
                <div class="col">
                  {{nota2}}
                </div>
                <div class="col">
                  {{nota3}}
                </div>
                <div class="col">
                  <button type="button" class="btn btn-primary"><a
                      href="/editar/{{id}}"
                      style="color:inherit"
                    >Editar</a></button>

                  <button type="button" class="btn btn-danger"><a
                      href="/excluir/{{id}}"
                      style="color:inherit"
                      onclick="excluirConfirm('{{id}}')"
                    >Excluir</a></button>
                </div>

                <script>
                  function excluirConfirm(id) { const confirmacao =
                  confirm("Você tem certeza que deseja excluir esse registro?");
                  if (confirmacao) { window.location.href = "/excluir/" + id; }
                  }
                </script>
              </div>
            {{/dataValues}}
          {{/each}}
        </div>
      </p>
    </div>
    <div class="col-1">
      &nbsp;
    </div>
  </div>
</div>